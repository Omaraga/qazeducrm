# ===========================================
# QazEduCRM Production Environment Variables
# ===========================================
# Copy this file to .env and update the values

# ============ DOMAIN ============
DOMAIN=yourdomain.com

# ============ MySQL ============
DB_NAME=qazeducrm
DB_USER=qazeducrm
DB_PASS=CHANGE_THIS_TO_SECURE_PASSWORD
MYSQL_ROOT_PASSWORD=CHANGE_THIS_TO_SECURE_ROOT_PASSWORD

# ============ PostgreSQL (Evolution API) ============
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# ============ Evolution API (WhatsApp) ============
EVOLUTION_API_KEY=CHANGE_THIS_TO_RANDOM_API_KEY
EVOLUTION_SERVER_URL=https://yourdomain.com/whatsapp

# ============ Yii2 ============
YII_DEBUG=false
YII_ENV=prod
